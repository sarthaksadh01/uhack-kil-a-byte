<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:background="#acf4d6">



    <TextView

        android:id="@+id/scholarType"

        android:layout_width="310dp"

        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView1"

        android:layout_below="@+id/typeButton"

        android:paddingStart="15dp"

        android:textColor="#707070"

        android:textSize="14sp"

        tools:layout_editor_absoluteX="163dp"

        tools:layout_editor_absoluteY="64dp" />



    <TextView

        android:id="@+id/degree"

        android:layout_width="310dp"

        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/scholarType"

        android:layout_below="@+id/degreeButton"

        android:paddingStart="15dp"

        android:textColor="#707070"

        android:textSize="14sp"

        tools:layout_editor_absoluteX="163dp"

        tools:layout_editor_absoluteY="64dp" />



    <TextView

        android:id="@+id/country"

        android:layout_width="310dp"

        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/scholarType"

        android:layout_below="@+id/countryButton"

        android:paddingStart="15dp"

        android:textColor="#707070"

        android:textSize="14sp"

        tools:layout_editor_absoluteX="163dp"

        tools:layout_editor_absoluteY="64dp" />



    <TextView

        android:id="@+id/field"

        android:layout_width="310dp"

        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/scholarType"

        android:layout_below="@+id/fieldButton"

        android:paddingStart="15dp"

        android:textColor="#707070"

        android:textSize="14sp"

        tools:layout_editor_absoluteX="163dp"

        tools:layout_editor_absoluteY="64dp" />



    <ImageButton

        android:id="@+id/typeButton"

        android:layout_width="40dp"

        android:layout_height="40dp"

        android:layout_alignTop="@+id/textView1"

        android:layout_toEndOf="@+id/degree"

        app:srcCompat="@android:drawable/arrow_down_float" />



    <ImageButton

        android:id="@+id/degreeButton"

        android:layout_width="40dp"

        android:layout_height="40dp"

        android:layout_alignTop="@+id/textView3"

        android:layout_toEndOf="@+id/scholarType"

        app:srcCompat="@android:drawable/arrow_down_float" />



    <ImageButton

        android:id="@+id/countryButton"

        android:layout_width="40dp"

        android:layout_height="40dp"

        android:layout_alignTop="@+id/textView2"

        android:layout_toEndOf="@+id/scholarType"

        app:srcCompat="@android:drawable/arrow_down_float" />



    <ImageButton

        android:id="@+id/fieldButton"

        android:layout_width="40dp"

        android:layout_height="40dp"

        android:layout_alignTop="@+id/textView4"

        android:layout_toEndOf="@+id/scholarType"

        app:srcCompat="@android:drawable/arrow_down_float" />



    <TextView

        android:id="@+id/textView4"

        android:layout_width="310dp"

        android:layout_height="40dp"

        android:layout_alignStart="@+id/scholarType"

        android:layout_marginTop="340dp"

        android:paddingStart="15dp"

        android:text="Area of Intrest"

        android:textColor="#000000"

        android:textSize="18sp"

        android:textStyle="bold" />



    <TextView

        android:id="@+id/textView3"

        android:layout_width="310dp"

        android:layout_height="40dp"

        android:layout_alignStart="@+id/scholarType"

        android:layout_marginTop="240dp"

        android:paddingStart="15dp"

        android:text="Degree"

        android:textColor="#000000"

        android:textSize="18sp"

        android:textStyle="bold" />



    <TextView

        android:id="@+id/textView2"

        android:layout_width="310dp"

        android:layout_height="40dp"

        android:layout_alignParentTop="true"

        android:layout_alignStart="@+id/scholarType"

        android:layout_marginTop="140dp"

        android:paddingStart="15dp"

        android:text="Country of Intrest"

        android:textColor="#000000"

        android:textSize="18sp"

        android:textStyle="bold" />



    <TextView

        android:id="@+id/textView1"

        android:layout_width="310dp"

        android:layout_height="40dp"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:layout_marginStart="16dp"

        android:layout_marginTop="40dp"

        android:paddingStart="15dp"

        android:text="Type Of Scholarship"

        android:textColor="#000000"

        android:textSize="18sp"

        android:textStyle="bold" />



    <Button

        android:id="@+id/button"

        android:layout_width="180dp"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"

        android:padding="8dp"

        android:text="Cancel"

        android:textSize="16sp"/>



    <Button

        android:id="@+id/button2"

        android:layout_width="180dp"

        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        android:layout_alignParentEnd="true"

        android:padding="8dp"

        android:text="Apply"

        android:textSize="16sp"/>



</RelativeLayout>